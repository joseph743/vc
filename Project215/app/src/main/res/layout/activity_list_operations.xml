<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:project215="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- product management -->
    <app.com.project215.widgets.CustomTextView
        android:id="@+id/tv_page_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/black"
        android:gravity="left|center"
        android:paddingLeft="20dp"
        android:text="Operations Status"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dp_16"
        project215:customFont="@string/font_regular" />


    <ScrollView
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="horizontal|vertical">

        <HorizontalScrollView
            android:id="@+id/horizontalView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal|vertical">

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tl_parent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
            >

                <TableRow
                    android:id="@+id/tr_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <app.com.project215.widgets.CustomTextView
                        android:id="@+id/tv_type"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"

                        android:layout_margin="1dp"
                        android:background="@drawable/table_row_border"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="Type"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        project215:customFont="@string/font_regular" />

                    <app.com.project215.widgets.CustomTextView
                        android:id="@+id/tv_source"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"

                        android:layout_margin="1dp"
                        android:background="@drawable/table_row_border"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="Source"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        project215:customFont="@string/font_regular" />

                    <app.com.project215.widgets.CustomTextView
                        android:id="@+id/tv_destination"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"

                        android:layout_margin="1dp"
                        android:background="@drawable/table_row_border"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="Destination"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        project215:customFont="@string/font_regular" />

                    <app.com.project215.widgets.CustomTextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"

                        android:layout_margin="1dp"
                        android:background="@drawable/table_row_border"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="Status"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        project215:customFont="@string/font_regular" />

                    <app.com.project215.widgets.CustomTextView
                        android:id="@+id/tv_driver"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"

                        android:layout_margin="1dp"
                        android:background="@drawable/table_row_border"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="Driver"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        project215:customFont="@string/font_regular" />

                    <app.com.project215.widgets.CustomTextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"

                        android:layout_margin="1dp"
                        android:background="@drawable/table_row_border"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="Date"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        project215:customFont="@string/font_regular" />

                    <app.com.project215.widgets.CustomTextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"

                        android:layout_margin="1dp"
                        android:background="@drawable/table_row_border"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="Departure Time"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        project215:customFont="@string/font_regular" />

                    <app.com.project215.widgets.CustomTextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:background="@drawable/table_row_border"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="Expecting End Time"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        project215:customFont="@string/font_regular" />


                    <app.com.project215.widgets.CustomTextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:background="@drawable/table_row_border"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        project215:customFont="@string/font_regular" />


