                        <!--project215:customFont="@string/font_regular" />-->
                <!--</LinearLayout>-->

                <!--  time Picker -->
                <LinearLayout
                    android:id="@+id/ll_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_bg"
                    android:orientation="horizontal">

                    <app.com.project215.widgets.CustomTextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:layout_marginBottom="2dp"
                        android:padding="10dp"
                        android:text="Departure Time"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        project215:customFont="@string/font_regular" />

                    <app.com.project215.widgets.CustomTextView
                        android:id="@+id/tv_selected_start_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:layout_marginBottom="2dp"
                        android:inputType="number"
                        android:padding="10dp"
                        android:text="Select Departure Time"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        project215:customFont="@string/font_regular" />
                </LinearLayout>

                <!--  expecting end time Picker -->
                <LinearLayout
                    android:id="@+id/ll_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_bg"
                    android:orientation="horizontal">

                    <app.com.project215.widgets.CustomTextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:layout_marginBottom="2dp"
                        android:padding="10dp"
                        android:text="Expecting End Time"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        project215:customFont="@string/font_regular" />

                    <app.com.project215.widgets.CustomTextView
                        android:id="@+id/tv_selected_end_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:layout_marginBottom="2dp"
                        android:inputType="number"
                        android:padding="10dp"
                        android:text="Select End Time"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        project215:customFont="@string/font_regular" />
                </LinearLayout>


            </LinearLayout>

            <!-- create product -->
            <app.com.project215.widgets.CustomTextView
                android:id="@+id/tv_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/black"
                android:gravity="center"
                android:padding="10dp"
                android:text="Assigne"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                project215:customFont="@string/font_regular" />

