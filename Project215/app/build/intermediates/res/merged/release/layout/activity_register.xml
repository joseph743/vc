                    android:inputType="phone"
                    android:padding="10dp"
                    android:textColorHint="@color/theme_grey"
                    android:textSize="14sp"
                    project215:customFont="@string/font_regular" />

            </LinearLayout>

            <!-- phone number -->
            <LinearLayout
                android:layout_width="match_parent"
